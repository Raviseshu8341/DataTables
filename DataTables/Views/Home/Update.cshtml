@model SampleCore.Core.Model.DataDetail
@{
    Layout = null;
}
<head>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
            <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
<script>
$().ready(function () {
        $("#basic").validate({
            rules: {
                FirstName: {
                    required: true,
                    minlength: 2 
                }
                LastName: {
                    required: true,
                    minlength: 5
                },
                Address: {
                    required: true,
                    minlength: 5,
                },
                Phone: {
                    required: true,
                    maxlength: 10,
                    minlength: 10,
                },
                password: {
                    required: true,
                    minlength: 5
                },
                Email: {
                    required: true,
                    email: true
                }
            },
            // in 'messages' user have to specify message as per rules
            messages: {
                FirstName: {
                    required: " Please enter a FirstName",
                    minlength: " Your username must consist of at least 2 characters"
                },
                Address: {
                    required: " Please enter a Address",
                    minlength: " Your username must consist of at least 2 characters"
                },
                LastName: {
                    required: " Please enter a LastName",
                    minlength: " Your username must consist of at least 2 characters"
                },
                Email: {
                    required: " Please enter a EmailId",
                    minlength: " Your username must consist of at least 2 characters"
                },
                Phone: {
                    required: " Please enter a Phone Number",
                    minlength: " Your username must consist of at least 10 characters"
                },
                password: {
                    required: " Please enter a password",
                    minlength: " Your password must be consist of at least 5 characters"
                }
            }
        });
    });
    function Submit() {
        debugger
        if ($("#basic").validate()) {
            debugger
            $("#basic").submit();
        }
    }
</script>
</head>
<center><h1>Update Your Data</h1></center>
@using (Html.BeginForm("Update", "Home",FormMethod.Post,new{id="basic"}))
{
    <center>
        <div class="input_container">
            <form name="formValidation" id="formValidaion" action="Adding.cshtml">
            <div class="input-row">
                @Html.EditorFor(a=>a.FirstName)
            </div>
            <div class="input-row">
                 @Html.EditorFor(a=>a.LastName)
            </div>
           <div class="input-row">
                 @Html.EditorFor(a=>a.Email)
            </div>
            <div class="input-row">
                 @Html.EditorFor(a=>a.Address)
            </div>
            <div class="input-row">
                <select name="countryCode" id="">
	        <option data-countryCode="GB" value="44" Selected>UK (+44)</option>
	        <option data-countryCode="US" value="1">USA (+1)</option>
            <option data-countryCode="IS" value="354">Iceland (+354)</option>
		    <option data-countryCode="IN" value="91">India (+91)</option>
		    <option data-countryCode="ID" value="62">Indonesia (+62)</option>
		    <option data-countryCode="IR" value="98">Iran (+98)</option>
		    <option data-countryCode="IQ" value="964">Iraq (+964)</option>
		    <option data-countryCode="IE" value="353">Ireland (+353)</option>
             </select>
                 @Html.EditorFor(a=>a.Phone)
            </div>
            <div class="input-row">
                 @Html.EditorFor(a=>a.password)
            </div>
            <div class="text-center">
                <input type="submit" value="Submit">
            </div>
            <p>
                <input type="button" value="To Read" onclick="location.href='@Url.Action("Read", "Home")'" />
            </p>
            </form>
        </div>
        </center>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
            <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js">
            </Script>
            <script type="text/javascript" src="js/custom.js"></Script>
            <style>
                
                body{
                    font-family:arial;
                    font-size:16px;
                    margin:0;
                    background:#2793d2;
                    color:#fff;
                    display:flex;
                    align-items:center;
                    justify-content:space-around;
                    min-height:100vh;
                }
                .input_container{
                    width:600px;
                    background-color:#fff;
                    padding:30px;
                    border-radius:15px;
                    box-shadow:0 0 25px rgba(0,0,0,0.3);
                    border:10px solid #41b9ff;
                }
                .input_container .input-row{
                    margin-bottom:12px;
                }
                .input_container input:not([type="submit"])
                .input_container textarea
                {
                    width:100%;
                    margin:0 0 3px;
                    background-color:#d6d6d6;
                    color:#000;
                    padding:10px 15px;
                    height:50px;
                    line-height:30px;
                    font-size:20px;
                    border-radius:5px;
                    border:2px solid transparent;
                    outline:0;
                    transition:all 0.5s ease-out;
                }
                .input_container textarea{
                    height:100px;
                    resize:none
                }
                .input_container input:not([type="submit"])
                .input_container textarea:focus{
                    border-color:#2793d2
                }
                *::-webkit-input-placeholder{
                    opacity:1;
                    color:#000
                }
                .input_container input[type="submit"]{
                    padding:10px 30px;
                    font-size:18px;
                    line-height:30px;
                    height:50px;
                    text-align:center;
                    text-transform:uppercase;
                    cursor:pointer;
                    background-color:#2793d2;
                    color:#fff;
                    border:0;
                    transition:all 0.5s ease-out;
                    border-radius:5px;
                } 
                .input_container input[type="submit"]:hover{
                    background-color:#000
                }
                label.error{
                    font-weight:700;
                    display:block;
                    color:#f00;
                    font-size:14px;
                }
            </style>
}
